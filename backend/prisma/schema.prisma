generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  email        String       @unique
  username     String
  image        String?
  passwordHash String
  provider     Provider[]
  tenants      Tenant[]
  createdAt    DateTime     @default(now())
  SaaSConfig   SaaSConfig[]
}

model ApiKey {
  id        String     @id @default(uuid())
  key       String     @unique
  saas      SaaSConfig @relation(fields: [saasId], references: [id])
  saasId    String
  createdAt DateTime   @default(now())
}

model SaaSConfig {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  name      String
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  ApiKey    ApiKey[]
  providers Provider[]
}

model Plan {
  id             String   @id @default(uuid())
  name           String   @unique
  monthlyPrice   Int
  apiLimit       Int
  storageLimitGB Int
  emailLimit     Int
  hasIsolatedDb  Boolean
  tenants        Tenant[]
}

model Tenant {
  id            String          @id @default(uuid())
  owner         User            @relation(fields: [ownerUserId], references: [id])
  ownerUserId   String
  name          String
  plan          Plan            @relation(fields: [planId], references: [id])
  planId        String
  provider      Provider[]
  usageEvents   UsageEvent[]
  createdAt     DateTime        @default(now())
  EmailTemplate EmailTemplate[]
  StorageObject StorageObject[]
  Integration   Integration[]
  Webhook       Webhook[]
}

model UsageEvent {
  id        String   @id @default(uuid())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  eventType String
  quantity  Int
  timestamp DateTime @default(now())
}

model EmailTemplate {
  id        String   @id @default(uuid())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  name      String
  subject   String
  body      String
  createdAt DateTime @default(now())
}

model StorageObject {
  id          String   @id @default(uuid())
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  tenantId    String
  filename    String
  contentType String
  sizeBytes   Int
  s3Key       String
  createdAt   DateTime @default(now())
}

model Integration {
  id           String    @id @default(uuid())
  tenant       Tenant    @relation(fields: [tenantId], references: [id])
  tenantId     String
  provider     String
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  createdAt    DateTime  @default(now())
}

model Webhook {
  id        String   @id @default(uuid())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  targetUrl String
  secret    String
  createdAt DateTime @default(now())
}

enum Provider {
  google
  github
}
