generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppUser {
  id           String       @id @default(uuid())
  googleId     String?      @unique
  githubId     String?      @unique
  email        String       @unique
  username     String
  image        String?
  passwordHash String?
  saas         SaaSConfig[]
}

model User {
  id           String         @id @default(uuid())
  googleId     String?        @unique
  githubId     String?        @unique
  email        String         @unique
  username     String
  image        String?
  passwordHash String?
  saasId       String
  saas         SaaSConfig     @relation(fields: [saasId], references: [id])
  tenants      Tenant[]
  createdAt    DateTime       @default(now())
  RefreshToken RefreshToken[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model ApiKey {
  id        String     @id @default(uuid())
  key       String     @unique
  saas      SaaSConfig @relation(fields: [saasId], references: [id])
  saasId    String
  createdAt DateTime   @default(now())
}

model SaaSConfig {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  name         String
  description  String
  category     Category
  status       Status
  BillingPlans Json
  production   Boolean    @default(false)
  ApiKey       ApiKey[]
  providers    Provider[]
  User         User[]
  AppUser      AppUser    @relation(fields: [appUserId], references: [id])
  appUserId    String
}

model Provider {
  id           String       @id @default(uuid())
  createdAt    DateTime     @default(now())
  saasConfigId String
  saasConfig   SaaSConfig   @relation(fields: [saasConfigId], references: [id])
  type         ProviderType
  appId        String
  secretKey    String

  @@unique([saasConfigId, type])
}

model Plan {
  id             String   @id @default(uuid())
  name           String   @unique
  monthlyPrice   Int
  apiLimit       Int
  storageLimitGB Int
  emailLimit     Int
  hasIsolatedDb  Boolean
  tenants        Tenant[]
}

model Tenant {
  id            String          @id @default(uuid())
  owner         User            @relation(fields: [ownerUserId], references: [id])
  ownerUserId   String
  name          String
  plan          Plan            @relation(fields: [planId], references: [id])
  planId        String
  usageEvents   UsageEvent[]
  createdAt     DateTime        @default(now())
  EmailTemplate EmailTemplate[]
  StorageObject StorageObject[]
  Integration   Integration[]
  Webhook       Webhook[]
}

model UsageEvent {
  id        String   @id @default(uuid())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  eventType String
  quantity  Int
  timestamp DateTime @default(now())
}

model EmailTemplate {
  id        String   @id @default(uuid())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  name      String
  subject   String
  body      String
  createdAt DateTime @default(now())
}

model StorageObject {
  id          String   @id @default(uuid())
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  tenantId    String
  filename    String
  contentType String
  sizeBytes   Int
  s3Key       String
  createdAt   DateTime @default(now())
}

model Integration {
  id           String    @id @default(uuid())
  tenant       Tenant    @relation(fields: [tenantId], references: [id])
  tenantId     String
  provider     String
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  createdAt    DateTime  @default(now())
}

model Webhook {
  id        String   @id @default(uuid())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  tenantId  String
  targetUrl String
  secret    String
  createdAt DateTime @default(now())
}

enum ProviderType {
  google
  github
  apple
  microsoft
}

enum Category {
  Productivity
  Analytics
  Ecommerce
  Communication
  Finance
  AIML
  CRM
  Marketing
  Other
}

enum Status {
  active
  inactive
  developing
}
